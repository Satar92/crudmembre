{% extends 'layout-full-width.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block contentFullWidth %}
<div class="container">
    <div class="row">
        <div class="col h2">
            <h2>NOS CATEGORIES</h2>
        </div>
    </div>
    
    <div class="row">
        <div class="d-flex flex-row justify-content-evenly flex-wrap">
            {% for c in cat %}
            <div class="card" style="width: 18rem;">
                <img src="{{ asset(PRODUCT_CAT_IMG_FOLDER ~ c.nom ~ '.jpg')  }}" class="card-img-top" alt="categorie" height="215px">
                <div class="card-body">
                    <h5 class="card-title">{{ c.nom|ucfirst }}</h5>
                    <p class="card-text"></p>
                    <a href="#" class="btn btn-outline-secondary">Voir tous les articles</a>
                </div>
            </div>
            {% endfor %}
        </div>
        
    </div> 
</div>


{% endblock %}

